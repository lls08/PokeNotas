<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.saunitti.pokenotas" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pokebola"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.saunitti.pokenotas.PokeSplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.saunitti.pokenotas.PokeLoginActivity"
            android:label="@string/title_activity_poke_login"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.saunitti.pokenotas.PokeNotaActivity"
            android:label="PokeNota"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.saunitti.pokenotas.PokeNotasActivity"
            android:label="@string/title_activity_poke_notas"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.saunitti.pokenotas.PokePerfilActivity"
            android:label="@string/title_activity_poke_perfil"
            android:theme="@style/AppTheme" />
    </application>
</manifest>
